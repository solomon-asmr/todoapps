<%- include("partials/header.ejs") %>
<div class="container">
        
    <div class="heading">
        <%= today %>
    </div>   
    <form class="inputForm" action="/" method="POST">        
        <div class="input-group mb-4">
            <input type="text" name="newItem" class="form-control" autocomplete="off" placeholder="new ToDo's" aria-label="Recipient's username" aria-describedby="button-addon2">
            <button class="btn btn-outline-secondary" name="list" type="submit" id="button-addon2">+</button>
        </div>
    </form>
    <div class="box">  
       
            <% for(i = 0;i<newListItems1.length;i++) { %> 
                <div class="item">
                    <input type="checkbox" id="vehicle2" name="vehicle2" value="Car">
                    <label for="vehicle2"> <%= newListItems1[i] %></label><br>
                </div>            
                <hr>
                <% } %> 
    </div>
        
              
</div>

<script>
    $(document).ready(function() {
        $('.btn').click(function() {
            var mylist = $('input').val();
            $('.box').prepend('<li><input type="checkbox" id = "check" name="interest" onclick="toggleBoxVisibility()"><label>' + mylist + '</label></li>');

        });
        });
</script>


